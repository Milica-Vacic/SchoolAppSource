<apex:page label="PersonEditVF" name="PersonEditVF" standardController="Person__c" extensions="PersonController">
    <apex:form>
        <apex:pageBlock title="Custom Edit">
            <apex:pageBlockSection>
            <apex:pageMessages />
            
                <apex:repeat value="{!LayoutFields}" var="fname">
                    <apex:inputField value="{!person[fname]}"/>
                </apex:repeat>

                <apex:commandButton action="{! save }" value="Save" />
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>

    
</apex:page>